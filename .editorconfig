root = true

# =========================================
# Global defaults
# =========================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# =========================================
# C# (Unity)
# =========================================
[*.cs]
indent_size = 4

# =========================================
# JSON / YAML
# =========================================
[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

# =========================================
# Markdown
# =========================================
[*.md]
trim_trailing_whitespace = false
